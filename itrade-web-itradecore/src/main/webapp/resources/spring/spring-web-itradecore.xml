<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd"
       default-autowire="byName">

	<context:component-scan base-package="com.itrade.web.itradecore">
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller" />
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Service" />
	</context:component-scan>
	<context:annotation-config />

	<import resource="classpath:spring/spring-common-infrastructure.xml" />
	<import resource="classpath:spring/spring-common-itradecache.xml" />
	<import resource="classpath:spring/spring-dal-itradecore.xml" />
	<import resource="spring-web-itradecore-dubbo-consumer.xml" />

	<bean id="propertyConfigurer" class="com.itrade.common.infrastructure.business.conf.CustomizedPropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:runtimecfg/${properties.env}/runtime.properties</value>
			</list>
		</property>
	</bean>

</beans>